<?xml version="1.0" encoding="UTF-8" ?>
<definition xmlns="http://workflow.opencastproject.org">

    <id>uct-unusable-recording</id>
    <title>Unusable recording</title>
    <tags>
        <!--tag>editor</tag-->
        <tag>archive</tag>
    </tags>
    <description/>
    <configuration_panel />

    <operations>

        <!-- Load workflow properties from metadata: update some workflow properties -->
        <operation
                id="execute-once"
                max-attempts="3"
                retry-strategy="hold"
                fail-on-error="true"
                exception-handler-workflow="partial-error"
                description="Load workflow properties from settings in series">
            <configurations>
                <configuration key="exec">/opt/opencast/wfexec/get_organizer_details.pl</configuration>
                <configuration key="load">0.1</configuration>
                <configuration key="params">#{id} #{out}</configuration>
                <configuration key="output-filename">series_organizer.txt</configuration>
                <configuration key="set-workflow-properties">true</configuration>
                <configuration key="expected-type">Attachment</configuration>
            </configurations>
        </operation>

        <operation
                id="send-email"
                fail-on-error="true"
                if="${organizer_email_valid} AND ${get_organizer_success}"
                exception-handler-workflow="partial-error"
                description="Sending email to organizer and notification list about unusable recording">
            <configurations>
                <configuration key="to">${organizer_email}</configuration>
                <configuration key="cc">${notification_list}</configuration>
                <configuration key="subject">Unusable recording: ${series_title}</configuration>
                <configuration key="body-template-file">unusable_recording</configuration>
                <configuration key="use-html">true</configuration>
            </configurations>
        </operation>

        <!-- Resolving cutting flag -->
        <operation
                id="comment"
                fail-on-error="false"
                if="${organizer_email_valid} AND ${get_organizer_success}"
                description="Resolve the cutting flag">
            <configurations>
                <configuration key="description">Resolving the cutting flag </configuration>
                <configuration key="reason">EVENTS.EVENTS.DETAILS.COMMENTS.REASONS.CUTTING</configuration>
                <configuration key="action">resolve</configuration>
            </configurations>
        </operation>

        <!-- Adding unusable comment -->
        <operation
                id="comment"
                fail-on-error="false"
                if="NOT(${organizer_email_valid} AND ${get_organizer_success})"
                description="Mark recording as unusable">
            <configurations>
                <configuration key="description">This recording is unusable </configuration>
                <configuration key="reason">EVENTS.EVENTS.DETAILS.COMMENTS.REASONS.OTHER</configuration>
                <configuration key="action">create</configuration>
            </configurations>
        </operation>

        <!-- Resolving unusable comment -->
        <operation
                id="comment"
                fail-on-error="false"
                if="NOT(${organizer_email_valid} AND ${get_organizer_success})"
                description="Resolve unusable comment">
            <configurations>
                <configuration key="description">Resolving unusable comment </configuration>
                <configuration key="reason">EVENTS.EVENTS.DETAILS.COMMENTS.REASONS.OTHER</configuration>
                <configuration key="action">resolve</configuration>
            </configurations>
        </operation>

    </operations>
</definition>
