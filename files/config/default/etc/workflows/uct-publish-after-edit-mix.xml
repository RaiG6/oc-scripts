<?xml version="1.0" encoding="UTF-8" ?>
<definition xmlns="http://workflow.opencastproject.org">

  <id>uct-publish-after-edit-mix</id>
  <title>Publish (Mix)</title>
  <tags>
    <tag>editor</tag>
  </tags>
  <description/>
  <displayOrder>2</displayOrder>
  <configuration_panel />

  <operations>
    <operation
      id="defaults"
      description="Select stereo mix for publication">
      <configurations>
        <configuration key="workProfileChannel_left">false</configuration>
        <configuration key="workProfileChannel_right">false</configuration>
        <configuration key="workProfileChannel_merge">true</configuration>
        <configuration key="workProfileChannel_stereo">false</configuration>

        <configuration key="workProfileChannel">stereo</configuration>
      </configurations>
    </operation>

    <operation
      id="include"
      description="Publish by merging left and right (publish with mono audio)">
      <configurations>
        <configuration key="workflow-id">uct-publish-after-edit</configuration>
      </configurations>
    </operation>

  </operations>

</definition>
