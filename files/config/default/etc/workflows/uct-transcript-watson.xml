<?xml version="1.0" encoding="UTF-8" ?>
<definition xmlns="http://workflow.opencastproject.org">

  <id>uct-transcript-watson</id>
  <title>Submit trimmed audio for Watson Transcription</title>
  <tags>
    <tag>archive</tag>
  </tags>
  <description>Submit trimmed audio for Watson Transcription</description>
  <configuration_panel>
    <![CDATA[
      <div id="workflow-configuration">

        <fieldset>
          <legend>Publication Options:</legend>
          <ul>
            <li>
              <label>Audio channel to use:
            </li>
            <li>
              <input id="workProfileChannel_left" name="workProfileChannel" type="radio" checked="checked" class="configField" value="true" />
              <label for="workProfileChannel_left">Left</label>
            </li>
            <li>
              <input id="workProfileChannel_right" name="workProfileChannel" type="radio" class="configField" value="true"/>
              <label for="workProfileChannel_right">Right</label>
            </li>
            <li>
              <input id="workProfileChannel_merge" name="workProfileChannel" type="radio" class="configField" value="true"/>
              <label for="workProfileChannel_merge">Merge left and right (publish with mono audio)</label>
            </li>
            <!--li>
              <input id="workProfileChannel_stereo" name="workProfileChannel" type="radio" class="configField" value="true"/>
              <label for="workProfileChannel_stereo">Stereo</label>
            </li-->
          </ul>
        </fieldset>
      </div>
    ]]>
  </configuration_panel>
  <operations>

    <!-- Apply the default workflow configuration -->
    <operation
      id="defaults"
      description="Applying default configuration values">
      <configurations>
        <configuration key="workProfileChannel_left">true</configuration>
        <configuration key="workProfileChannel_right">false</configuration>
        <configuration key="workProfileChannel_merge">false</configuration>
        <configuration key="workProfileChannel_stereo">false</configuration>

        <configuration key="workProfileChannel">left</configuration>
      </configurations>
    </operation>

    <operation
      id="defaults"
      if="${workProfileChannel_left}"
      description="Use left audio channel">
      <configurations>
        <configuration key="workProfileChannel">left</configuration>
      </configurations>
    </operation>

    <operation
      id="defaults"
      if="${workProfileChannel_right}"
      description="Use right audio channel">
      <configurations>
        <configuration key="workProfileChannel">right</configuration>
      </configurations>
    </operation>

    <operation
      id="defaults"
      if="${workProfileChannel_merge}"
      description="Mix left and right channels">
      <configurations>
        <configuration key="workProfileChannel">mix</configuration>
      </configurations>
    </operation>

    <operation
      id="defaults"
      if="${workProfileChannel_stereo}"
      description="Use stereo">
      <configurations>
        <configuration key="workProfileChannel">stereo</configuration>
      </configurations>
    </operation>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      Prepare work versions of the source material for archive and processing.
      Preview and Publish use Work versions. (*/work)
    -->
    <!-- OPENCAST-2202: Just use presenter flavor -->
    <operation
      id="prepare-av"
      exception-handler-workflow="uct-error"
      description="Preparing presenter (camera) audio and video work versions (${workProfileChannel})">
      <configurations>
        <configuration key="source-flavor">presenter/source</configuration>
        <configuration key="target-flavor">presenter/work</configuration>
        <configuration key="rewrite">true</configuration>
        <configuration key="audio-muxing-source-flavors">presenter/source,presenter/?,presentation/?,*/*</configuration>
        <configuration key="mux-encoding-profile">uct-mux-av-${workProfileChannel}.work</configuration>
        <configuration key="audio-video-encoding-profile">uct-av-${workProfileChannel}.work</configuration>
      </configurations>
    </operation>

    <operation id="editor"
      fail-on-error="true"
      exception-handler-workflow="partial-error"
      description="Cut the recording according to the edit decision list">
      <configurations>
        <configuration key="source-flavors">*/work</configuration>
        <configuration key="smil-flavors">smil/cutting</configuration>
        <configuration key="target-smil-flavor">smil/cutting</configuration>
        <configuration key="target-flavor-subtype">trimmed</configuration>
        <configuration key="interactive">false</configuration>
      </configurations>
    </operation>

    <!-- Extract audio from video in ogg/opus format -->
    <operation
      id="compose"
      fail-on-error="true"
      exception-handler-workflow="partial-error"
      description="Extract audio for transcript generation">
      <configurations>
        <configuration key="source-flavor">*/trimmed</configuration>
        <configuration key="target-flavor">audio/ogg</configuration>
        <configuration key="target-tags">transcript</configuration>
        <!--
        audio-opus uses -ac 1 so will downmix all the channels anyway :p

        The Speech to Text service accepts audio with a maximum of 16 channels.
        Because it uses only a single channel for speech recognition,
        the service downmixes audio with multiple channels to one-channel mono during transcoding.

        For the audio/wav format, the service accepts audio with a maximum of nine channels.
        -->
        <configuration key="encoding-profile">audio-opus</configuration>
        <!-- If there is more than one file that match the source-tags, use only the first one -->
        <configuration key="process-first-match-only">true</configuration>
      </configurations>
    </operation>

    <!-- Start IBM Watson recognitions job : ASYNC return in -->
    <operation
      id="start-watson-transcription"
      fail-on-error="true"
      exception-handler-workflow="partial-error"
      description="Start IBM Watson transcription job">
      <configurations>
        <!--  Skip this operation if flavor already exists. Used for cases when mp already has captions. -->
        <configuration key="skip-if-flavor-exists">captions/vtt+en</configuration>
        <!-- Audio to be translated, produced in the previous compose operation -->
        <configuration key="source-tag">transcript</configuration>
      </configurations>
    </operation>

    <!-- Cleanup -->
    <operation
      id="include"
      description="Remove temporary processing artifacts">
      <configurations>
        <configuration key="workflow-id">partial-cleanup</configuration>
      </configurations>
    </operation>

  </operations>
</definition>
