<?xml version="1.0" encoding="UTF-8" ?>
<definition xmlns="http://workflow.opencastproject.org">

  <id>test</id>
  <title>Test audio channel extract</title>
  <tags>
    <tag>archive</tag>
  </tags>
  <description/>
  <configuration_panel />

  <operations>
    <operation
      id="defaults"
      description="Use left audio channel">
      <configurations>
        <configuration key="workProfileChannel">left</configuration>
      </configurations>
    </operation>

    <operation
      id="compose"
      fail-on-error="false"
      description="Copy over video">
      <configurations>
        <configuration key="source-flavor">*/source</configuration>
        <configuration key="target-flavor">*/pre</configuration>
        <configuration key="encoding-profile">copy.video</configuration>
      </configurations>
    </operation>

    <operation
      id="compose"
      fail-on-error="false"
      description="Extracting audio for channel selection">
      <configurations>
        <configuration key="source-flavor">presenter/source</configuration>
        <configuration key="target-flavor">presenter/tmp</configuration>
        <configuration key="encoding-profile">copy.audio</configuration>
        <configuration key="process-first-match-only">true</configuration>
      </configurations>
    </operation>

    <operation
      id="execute-once"
      max-attempts="3"
      retry-strategy="hold"
      fail-on-error="true"
      exception-handler-workflow="partial-error"
      description="Choose correct channel">
      <configurations>
        <configuration key="exec">/opt/opencast/wfexec/detect-stereo.sh</configuration>
        <configuration key="load">1.0</configuration>
        <configuration key="params">-i #{flavor(presenter/tmp)} -o #{out} --channel ${workProfileChannel}</configuration>
        <configuration key="output-filename">audio-output.flac</configuration>
        <configuration key="target-flavor">presenter/audio</configuration>
        <configuration key="expected-type">Track</configuration>
      </configurations>
    </operation>

    <!-- 4.x : works :) -->
    <operation
      id="prepare-av"
      exception-handler-workflow="uct-error"
      description="Preparing presenter (camera) audio and video work versions">
      <configurations>
        <configuration key="source-flavor">presenter/pre</configuration>
        <configuration key="target-flavor">presenter/work</configuration>
        <configuration key="rewrite">false</configuration>
        <configuration key="audio-muxing-source-flavors">presenter/audio,presenter/?,presentation/?,*/*</configuration>
        <configuration key="mux-encoding-profile">uct-av.work</configuration>
      </configurations>
    </operation>

    <operation
      id="prepare-av"
      exception-handler-workflow="uct-error"
      description="Preparing presentation (screen) audio and video work version">
      <configurations>
        <configuration key="source-flavor">presentation/pre</configuration>
        <configuration key="target-flavor">presentation/work</configuration>
        <configuration key="rewrite">false</configuration>
        <configuration key="audio-muxing-source-flavors">presenter/audio,presenter/?,presentation/?,*/*</configuration>
        <configuration key="mux-encoding-profile">uct-av.work</configuration>
      </configurations>
    </operation>

    <operation
      id="prepare-av"
      exception-handler-workflow="uct-error"
      description="Preparing presentation 2nd (screen) audio and video work version">
      <configurations>
        <configuration key="source-flavor">presentation2/pre</configuration>
        <configuration key="target-flavor">presentation2/work</configuration>
        <configuration key="rewrite">false</configuration>
        <configuration key="audio-muxing-source-flavors">presenter/audio,presenter/?,presentation/?,*/*</configuration>
        <configuration key="mux-encoding-profile">uct-av.work</configuration>
      </configurations>
    </operation>

    <operation
      id="tag"
      description="Archive presenter_audio">
      <configurations>
        <configuration key="source-flavors">*/work</configuration>
        <configuration key="target-tags">archive</configuration>
      </configurations>
    </operation>

    <operation
      id="snapshot"
      description="Archive publishing information">
      <configurations>
        <configuration key="source-tags">archive</configuration>
      </configurations>
    </operation>

  </operations>
</definition>
